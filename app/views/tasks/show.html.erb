<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => Task %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @task.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @task.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:due_date) %></dt>
      <dd><pre class="prettyprint"><%= @task.due_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:completed) %></dt>
      <dd><pre class="prettyprint"><%= @task.completed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @task.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @task.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pledge_id) %></dt>
      <dd><pre class="prettyprint"><%= @task.pledge_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

